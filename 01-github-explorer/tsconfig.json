{
  "compilerOptions": {                              
    "lib": ["dom", "dom.iterable", "esnext"],                                        
    "allowJs": true,                                                             
    "noEmit": true,                                   
    "jsx": "react-jsx",                                                                  
    "moduleResolution": "node",                                        
    "resolveJsonModule": true,                       
    "isolatedModules": true,                          
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                                                     
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                                                
    "skipLibCheck": true                                 
  },
  "include": ["src"] 
}
